        print("Possible Exits: north, south")
        choice = input("")
        def jd_desk()
    elif choice == "south"
        print("To the west is the accounting department.")
        print('Oscar: "Did Pam give you the teapot for the finer things club?"')
        
        print("Possible Exits: west")
        choice = input("")
    else:
        print("Sorry that is not a possible exit.")
        print("Possible Exits: east, south")
        choice = input("")
    return choice

