def main():
    print("---------------Welcome to The Office Game!---------------")
    print("\n\nUse only single word commands. Your command options are:")
    print("north, east, south, west, grab, give, inventory, eat.")
    print("\nFor example, if you want to eat a pretzel, you wouldn't")
    print('say "eat pretzel" you would just say"eat"')
    print("\nDING! You step off the elevator.")
    print("Possible Exits: east")
    choice = input("Choice: ")
    leave_elvtr(choice)
    
    
def leave_elvtr(choice):
    while choice != east:
        print("Sorry that is not a possible exit.")
        print("Possible Exits: east")
        choice = input("Choice: ")

    print("You move east to the DUNDER MIFFLIN sign.")
    print("Possible Exits: south")
    choice = input("Choice: ")

    while choice != south:
        print("Sorry that is not a possible exit.")
        print("Possible Exits: south")
        choice = input("Choice: ")

    return choice

def pam_desk(choice):
    print("You move south to Pam's desk (the reception desk). On her desk")
    print("is a small teal teapot. Type 'grab' to pick it up.")
    print("Possible Exits: east, south")
    choice = input("Choice: ")