def leave_elvtr(choice):
    while choice != east:
        print("Sorry that is not a possible exit.")
        print("Possible Exits: east")
        choice = input("Choice: ")

    print("You see the DUNDER MIFFLIN sign.")
    print("Possible Exits: south")
    choice = input("Choice: ")

    while choice != south:
        print("Sorry that is not a possible exit.")
        print("Possible Exits: south")
        choice = input("Choice: ")

    return choice